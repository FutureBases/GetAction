<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/top_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false">
        <include layout="@layout/topview" />
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:orientation="vertical" android:id="@id/foot_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include layout="@layout/footview" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/body_view" android:background="@color/rc_white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@id/foot_view" android:layout_below="@id/top_view" />
</RelativeLayout>